<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/activity_left_margin"
    android:orientation="horizontal"
    android:background="@color/colorBackgroundItem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/pi_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/activity_left_margin"
                android:layout_marginTop="@dimen/activity_top_margin"
                android:layout_marginBottom="@dimen/activity_top_margin"
                android:src="@drawable/publish_preset2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_left_margin"
            android:gravity="center|left"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的车位"
                android:textSize="@dimen/text_middle"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置："
                    android:textSize="@dimen/text_little"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_little"
                    android:id="@+id/pi_location"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重复："
                    android:textSize="@dimen/text_little" />
                <TextView
                    android:id="@+id/pi_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周一 周二"
                    android:textSize="@dimen/text_little"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6">
            <ToggleButton
                android:id="@+id/pi_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_left_margin"
                android:background="@android:color/transparent"
                android:button="@drawable/switch_btn"
                android:layout_gravity="center"
                android:checked="true"
                android:focusable="false"
                android:textOff=""
                android:textOn=""/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
